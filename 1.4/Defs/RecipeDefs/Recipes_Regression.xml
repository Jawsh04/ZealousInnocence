			<Medicine>1</Medicine>
		</skillRequirements>
		<targetsBodyPart>true</targetsBodyPart>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<researchPrerequisite>VitalsMonitor</researchPrerequisite>
	</RecipeDef>
