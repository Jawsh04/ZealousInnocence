<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef>
		<defName>BladderSize</defName>
		<category>BasicsPawn</category>
		<label>bladder size</label>
    <description>Bigger bladders means having more time before you have to go.\n\nAs a small downside, it also means how big the eventual accident would be.</description>
    
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <showOnHumanlikes>true</showOnHumanlikes>
    <showOnAnimals>true</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <showOnEntities>false</showOnEntities>
    <showDevelopmentalStageFilter>Adult, Child</showDevelopmentalStageFilter>
  </StatDef>
	
	<StatDef>
		<defName>BladderStrengh</defName>
