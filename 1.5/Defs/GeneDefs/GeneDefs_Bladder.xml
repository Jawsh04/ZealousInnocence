  <GeneDef Name="GeneBladderStrength" Abstract="True">
    <displayCategory>Bladder</displayCategory>
		<endogeneCategory>BodyType</endogeneCategory>
    <canGenerateInGeneSet>true</canGenerateInGeneSet>
    <passOnDirectly>true</passOnDirectly>
    <exclusionTags>
      <li>BladderStrength</li>
    </exclusionTags>
  </GeneDef>
	
	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderStrenghWeak</defName>
    <label>weak bladder control</label>
    <labelShortAdj>weak control</labelShortAdj>
    <description>This gene gives a pawn weaker control over their bladder. This can lead to accidents.</description>
    <iconPath>Genes/Icons/RedBicep</iconPath>
    <displayOrderInCategory>-120</displayOrderInCategory>
    <statFactors>
      <BladderStrengh>0.75</BladderStrengh>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderStrenghStrong</defName>
    <label>strong bladder control</label>
    <labelShortAdj>strong control</labelShortAdj>
    <description>This gene gives a pawn stronger control over their bladder. They'll always have an easier time making it to the bathroom.</description>
    <iconPath>Genes/Icons/GreenBicep</iconPath>
    <displayOrderInCategory>-110</displayOrderInCategory>
    <statFactors>
      <BladderStrengh>1.25</BladderStrengh>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>-1</biostatMet>
  </GeneDef>
	
	<GeneDef Name="GeneBladderBedwetting" Abstract="True">
    <displayCategory>Bladder</displayCategory>
		<endogeneCategory>BodyType</endogeneCategory>
    <canGenerateInGeneSet>true</canGenerateInGeneSet>
    <passOnDirectly>true</passOnDirectly>
    <exclusionTags>
      <li>BladderBedwetting</li>
    </exclusionTags>
  </GeneDef>

	<GeneDef ParentName="GeneBladderBedwetting">
    <defName>BladderBedwettingEarly</defName>
    <label>early bloomer</label>
    <labelShortAdj>early bloomer</labelShortAdj>
    <description>Causes a pawn to grow out of bedwetting at an earlier age, with no chance to keep the affliction as an adult.</description>
    <iconPath>Genes/Icons/EarlyBloomer</iconPath>
    <displayOrderInCategory>-100</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>0.75</BedwettingChance>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>-1</biostatMet>
  </GeneDef>

	<GeneDef ParentName="GeneBladderBedwetting">
    <defName>BladderBedwettingLate</defName>
    <label>late bloomer</label>
    <labelShortAdj>late bloomer</labelShortAdj>
    <description>Causes a pawn to outgrow bedwetting later in life, with a significantly higher chance (50/50) of retaining the condition into adulthood.</description>
    <iconPath>Genes/Icons/LateBloomer</iconPath>
    <displayOrderInCategory>-90</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>1.45</BedwettingChance>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>
	
	<GeneDef ParentName="GeneBladderBedwetting">
    <defName>BladderBedwettingAlways</defName>
    <label>bedwetter</label>
    <labelShortAdj>bedwetter</labelShortAdj>
    <description>Pawns with this gene will have severely hindered control over their bladder as they sleep. Lots of nighttime protection is advised.</description>
    <iconPath>Genes/Icons/Bedwetter</iconPath>
    <displayOrderInCategory>-80</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>2.0</BedwettingChance>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>
</Defs>
