<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
  <GeneDef Name="GeneBladderSize" Abstract="True">
    <displayCategory>Bladder</displayCategory>
		<endogeneCategory>BodyType</endogeneCategory>
    <canGenerateInGeneSet>true</canGenerateInGeneSet>
    <passOnDirectly>true</passOnDirectly>
    <exclusionTags>
      <li>BladderSize</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef ParentName="GeneBladderSize">
    <defName>BladderSizeTiny</defName>
    <label>tiny bladder</label>
    <labelShortAdj>tiny bladder</labelShortAdj>
    <description>How cute! This pawn needs to run fast and often just to make it in time.</description>
    <iconPath>Genes/Icons/TinyBladder</iconPath>
    <displayOrderInCategory>-160</displayOrderInCategory>
    <statFactors>
      <BladderRateMultiplier>1.5</BladderRateMultiplier>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>2</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneBladderSize">
    <defName>BladderSizeSmall</defName>
    <label>small bladder</label>
    <labelShortAdj>small bladder</labelShortAdj>
    <description>This pawns bladder will always be a bit smaller than normal. They should be fine, as long as toilets are nearby.</description>
    <iconPath>Genes/Icons/SmallBladder</iconPath>
    <displayOrderInCategory>-150</displayOrderInCategory>
    <statFactors>
      <BladderRateMultiplier>0.75</BladderRateMultiplier>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneBladderSize">
    <defName>BladderSizeBig</defName>
    <label>big bladder</label>
    <labelShortAdj>big bladder</labelShortAdj>
    <description>This pawns bladder is bigger than most. They can usually finish their job before they need to take care of business!</description>
    <iconPath>Genes/Icons/BigBladder</iconPath>
    <displayOrderInCategory>-140</displayOrderInCategory>
    <statFactors>
      <BladderRateMultiplier>-0.2</BladderRateMultiplier>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneBladderSize">
    <defName>BladderSizeHuge</defName>
    <label>huge bladder</label>
    <labelShortAdj>huge bladder</labelShortAdj>
    <description>This pawns bladder is exceptionally big. It's amazing how long they hold it!</description>
    <iconPath>Genes/Icons/HugeBladder</iconPath>
    <displayOrderInCategory>-130</displayOrderInCategory>
    <statFactors>
      <BladderRateMultiplier>-0.35</BladderRateMultiplier>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

  <GeneDef Name="GeneBladderStrength" Abstract="True">
    <displayCategory>Bladder</displayCategory>
		<endogeneCategory>BodyType</endogeneCategory>
    <canGenerateInGeneSet>true</canGenerateInGeneSet>
    <passOnDirectly>true</passOnDirectly>
    <exclusionTags>
      <li>BladderStrength</li>
    </exclusionTags>
  </GeneDef>
	
	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderStrenghWeak</defName>
    <label>weak bladder</label>
    <labelShortAdj>weak bladder</labelShortAdj>
    <description>Having a genetically weak bladder makes it harder to notice in time, to make sucessfully it to the toilet.</description>
    <iconPath>Genes/Icons/RedBicep</iconPath>
    <displayOrderInCategory>-120</displayOrderInCategory>
    <statFactors>
      <BladderStrengh>0.75</BladderStrengh>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>

	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderStrenghStrong</defName>
    <label>strong bladder</label>
    <labelShortAdj>strong bladder</labelShortAdj>
    <description>Having a genetically strong bladder makes it easier to notice in time, to make sucessfully to the toilet.</description>
    <iconPath>Genes/Icons/GreenBicep</iconPath>
    <displayOrderInCategory>-110</displayOrderInCategory>
    <statFactors>
      <BladderStrengh>1.5</BladderStrengh>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
  </GeneDef>
	
	<GeneDef Name="GeneBladderBedwetting" Abstract="True">
    <displayCategory>Bladder</displayCategory>
		<endogeneCategory>BodyType</endogeneCategory>
    <canGenerateInGeneSet>true</canGenerateInGeneSet>
    <passOnDirectly>true</passOnDirectly>
    <exclusionTags>
      <li>BladderBedwetting</li>
    </exclusionTags>
  </GeneDef>

	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderBedwettingEarly</defName>
    <label>early bloomer</label>
    <labelShortAdj>early bloomer</labelShortAdj>
    <description>Causes a pawn to grow out of bedwetting at a earlier age and have a no chance to keep that trait as an adult.</description>
    <iconPath>Genes/Icons/EarlyBloomer</iconPath>
    <displayOrderInCategory>-100</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>-0.25</BedwettingChance>
    </statFactors>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderBedwettingLate</defName>
    <label>late bloomer</label>
    <labelShortAdj>late bloomer</labelShortAdj>
    <description>Causes to grow out of bedwetting at a later age and has a much higher chance (50/50) to keep it into adulthood.</description>
    <iconPath>Genes/Icons/LateBloomer</iconPath>
    <displayOrderInCategory>-90</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>0.45</BedwettingChance>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>
	
	<GeneDef ParentName="GeneBladderStrength">
    <defName>BladderBedwettingAlways</defName>
    <label>bedwetter</label>
    <labelShortAdj>bedwetter</labelShortAdj>
    <description>The unlucky pawn receiving this gene will always keep bedwetting for a lifetime. Lots of protection is adviced at night.</description>
    <iconPath>Genes/Icons/Bedwetter</iconPath>
    <displayOrderInCategory>-80</displayOrderInCategory>
    <statFactors>
      <BedwettingChance>1.0</BedwettingChance>
    </statFactors>
    <biostatCpx>0</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>
</Defs>
