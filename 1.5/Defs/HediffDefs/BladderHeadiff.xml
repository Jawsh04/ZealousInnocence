<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
<HediffDef ParentName="ChronicDiseaseBase">
  <defName>BedWetting</defName>
  <label>bedwetting</label>
  <description>Condition that affects bedwetting from childhood through adulthood. Can grow out of it as they get older. Needs protection at night.</description>
  <hediffClass>HediffWithComps</hediffClass>
  <makesSickThought>false</makesSickThought>
  <tendable>false</tendable>
  <stages>
    <li>
      <label>childhood bedwetting</label>
      <minSeverity>0</minSeverity>
    </li>
    <li>
      <label>teen bedwetting</label>
      <minSeverity>0.4</minSeverity>
    </li>
    <li>
      <label>bedwetting</label>
      <minSeverity>0.7</minSeverity>
    </li>
  </stages>
</HediffDef>
	
  <HediffDef ParentName="InfectionBase">
    <defName>BladderInfection</defName>
    <label>Bladder infection</label>
    <description>A temporary infection of the bladder. They will have great trouble making it to the toilet in time. Accidents might occur randomly and/or at night.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
		<stages>
      <li>
        <partEfficiencyOffset>-0.75</partEfficiencyOffset>
      </li>
    </stages>
		<comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>48</baseTendDurationHours>
        <disappearsAtTotalTendQuality>3</disappearsAtTotalTendQuality>
      </li>
		</comps>

  </HediffDef>
  
	<HediffDef ParentName="ChronicDiseaseBase">
    <defName>WeakBladder</defName>
    <label>Weak bladder</label>
    <description>A very weak bladder. Accidents might occure randomly and/or at night.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
		<stages>
      <li>
        <partEfficiencyOffset>-0.35</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>
	
	<HediffDef ParentName="ChronicDiseaseBase">
    <defName>SmallBladder</defName>
    <label>Small bladder</label>
    <description>This bladder is smaller than normal. More frequent visits to the toilet are adviced.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
		<stages>
      <li>
			  <statOffsets>
					<BladderRateMultiplier>0.75</BladderRateMultiplier>
				</statOffsets>
      </li>
    </stages>
  </HediffDef>
	
	<HediffDef ParentName="ChronicDiseaseBase">
    <defName>TinyBladder</defName>
    <label>Tiny bladder</label>
    <description>This bladder is tiny. It's owner will need to run often and fast to make it in time.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
		<stages>
      <li>
			  <statOffsets>
					<BladderRateMultiplier>1.5</BladderRateMultiplier>
				</statOffsets>
      </li>
    </stages>
  </HediffDef>
	
	
	
  <HediffDef ParentName="ChronicDiseaseBase">
    <defName>Incontinent</defName>
    <label>incontinent</label>
    <description>No control over their bladder at all, even if they have one. Diapers are strongly recommended.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
		<stages>
      <li>
        <statOffsets>
					<BladderStrengh>-10.0</BladderStrengh>
				</statOffsets>
      </li>
    </stages>

  </HediffDef>
  
</Defs>